Needs[$metattache]

highlight_styles := <~
    number          -> "33",
    operator        -> "36;1",
    bracket_open    -> "1",
    bracket_close   -> "1",
    curry_open      -> "1",
    curry_close     -> "1",
    func_end        -> "1",
    func_start      -> "1",
    comma           -> "1",
    string          -> "33",
    reference       -> "33;1",
    comment         -> "35",
    abstract        -> "32;1"
~>

??<<
??? Returns a string with ANSII escape sequences surrounding each token in <code>code</code>.
??? @type code string
??? @return string
??? @genre string
highlight := [code] -> {
    tokens .= Tokenize[code]
    inner .= Join! {
        Format["\x1b[%sm%s\x1b[0m", highlight_styles[_.type], _.raw]
    } => tokens
}
??>>

??<<
??? asdf
??? @type code string
??? @return string
??? @genre string
highlight_html[code] := Join! {
    Format["<code class=""at_%s"">%s</code>", _.type, HTMLEscape[_.raw]]
} => Tokenize[code]
??>>
